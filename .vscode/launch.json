{
  // Configuração de debug para Node.js + TypeScript via tsx
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug com tsx (TypeScript)",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script", "dev"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}"
    }
  ]
}
